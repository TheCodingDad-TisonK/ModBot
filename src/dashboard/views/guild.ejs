<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= guild.name %> - FS25 ModBot</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary: #2ecc71;
            --dark: #1a1a2e;
            --darker: #0f0f1a;
            --light: #eaeaea;
        }
        
        body {
            background-color: var(--darker);
            color: var(--light);
        }
        
        .sidebar {
            background: var(--dark);
            min-height: 100vh;
            padding: 20px;
        }
        
        .content-area {
            padding: 30px;
        }
        
        .nav-link {
            color: var(--light);
            padding: 12px 15px;
            border-radius: 8px;
            margin-bottom: 5px;
        }
        
        .nav-link:hover, .nav-link.active {
            background: rgba(46, 204, 113, 0.2);
            color: var(--primary);
        }
        
        .btn-primary {
            background-color: var(--primary);
            border: none;
        }
        
        .btn-primary:hover {
            background-color: #27ae60;
        }
        
        .card {
            background: var(--dark);
            border: 1px solid rgba(255,255,255,0.1);
            border-radius: 10px;
        }
        
        .card-header {
            background: rgba(0,0,0,0.3);
            border-bottom: 1px solid rgba(255,255,255,0.1);
        }
        
        .form-control, .form-select {
            background: rgba(255,255,255,0.05);
            border: 1px solid rgba(255,255,255,0.2);
            color: var(--light);
        }
        
        .form-control:focus, .form-select:focus {
            background: rgba(255,255,255,0.1);
            border-color: var(--primary);
            color: var(--light);
        }
        
        .guild-header {
            display: flex;
            align-items: center;
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .guild-icon {
            width: 80px;
            height: 80px;
            border-radius: 50%;
        }
        
        .alert-admin {
            background: rgba(231, 76, 60, 0.2);
            border: 1px solid #e74c3c;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 sidebar">
                <h4 class="mb-4">
                    <i class="fas fa-robot me-2"></i>FS25 ModBot
                </h4>
                <nav class="nav flex-column">
                    <a class="nav-link active" href="#" data-tab="overview">
                        <i class="fas fa-home me-2"></i>Overview
                    </a>
                    <a class="nav-link" href="#" data-tab="moderation">
                        <i class="fas fa-shield-alt me-2"></i>Moderation
                    </a>
                    <a class="nav-link" href="#" data-tab="automod">
                        <i class="fas fa-robot me-2"></i>Auto-Mod
                    </a>
                    <a class="nav-link" href="#" data-tab="leveling">
                        <i class="fas fa-chart-line me-2"></i>Leveling
                    </a>
                    <a class="nav-link" href="#" data-tab="welcome">
                        <i class="fas fa-door-open me-2"></i>Welcome/Leave
                    </a>
                </nav>
                <hr>
                <a class="nav-link" href="/dashboard">
                    <i class="fas fa-arrow-left me-2"></i>Back
                </a>
                <a class="nav-link" href="/logout">
                    <i class="fas fa-sign-out-alt me-2"></i>Logout
                </a>
            </div>
            
            <!-- Main Content -->
            <div class="col-md-10 content-area">
                <!-- Guild Header -->
                <div class="guild-header">
                    <% if (guild.icon) { %>
                        <img src="https://cdn.discordapp.com/icons/<%= guild.id %>/<%= guild.icon %>.png" 
                             class="guild-icon" alt="<%= guild.name %>">
                    <% } else { %>
                        <div class="guild-icon d-flex align-items-center justify-content-center bg-secondary">
                            <i class="fas fa-server fa-2x"></i>
                        </div>
                    <% } %>
                    <div>
                        <h2 class="mb-0"><%= guild.name %></h2>
                        <small class="text-muted">Server ID: <%= guild.id %></small>
                    </div>
                </div>
                
                <!-- Overview Tab -->
                <div id="overview" class="tab-pane">
                    <div class="alert alert-admin mb-4">
                        <i class="fas fa-info-circle me-2"></i>
                        Only users with <strong>Administrator</strong> permission can modify settings.
                    </div>
                    <div class="row g-4">
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h3><%= guild.memberCount %></h3>
                                    <p class="text-muted mb-0">Members</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h3><%= guild.channels.cache.size %></h3>
                                    <p class="text-muted mb-0">Channels</p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <div class="card-body text-center">
                                    <h3><%= guild.roles.cache.size %></h3>
                                    <p class="text-muted mb-0">Roles</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                
                <!-- Moderation Tab -->
                <div id="moderation" class="tab-pane" style="display: none;">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Moderation Settings</h5>
                        </div>
                        <div class="card-body">
                            <form id="moderation-form">
                                <div class="mb-3">
                                    <label class="form-label">Moderation Log Channel</label>
                                    <select class="form-select" name="mod_log_channel">
                                        <option value="">None</option>
                                        <% guild.channels.cache.filter(c => c.type === 0).forEach(channel => { %>
                                            <option value="<%= channel.id %>" <%= settings && settings.mod_log_channel === channel.id ? 'selected' : '' %>>
                                                #<%= channel.name %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                                <button type="submit" class="btn btn-primary">Save Settings</button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Auto-Mod Tab -->
                <div id="automod" class="tab-pane" style="display: none;">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-robot me-2"></i>Auto-Moderation Settings</h5>
                        </div>
                        <div class="card-body">
                            <form id="automod-form">
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="automod_enabled" 
                                           name="automod_enabled" <%= settings && settings.automod_enabled ? 'checked' : '' %>>
                                    <label class="form-check-label" for="automod_enabled">Enable Auto-Moderation</label>
                                </div>
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="automod_antispam" 
                                           name="automod_antispam" <%= settings && settings.automod_antispam ? 'checked' : '' %>>
                                    <label class="form-check-label" for="automod_antispam">Anti-Spam</label>
                                </div>
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="automod_antilinks" 
                                           name="automod_antilinks" <%= settings && settings.automod_antilinks ? 'checked' : '' %>>
                                    <label class="form-check-label" for="automod_antilinks">Anti-Links</label>
                                </div>
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="automod_antiprofanity" 
                                           name="automod_antiprofanity" <%= settings && settings.automod_antiprofanity ? 'checked' : '' %>>
                                    <label class="form-check-label" for="automod_antiprofanity">Anti-Profanity</label>
                                </div>
                                <button type="submit" class="btn btn-primary">Save Settings</button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Leveling Tab -->
                <div id="leveling" class="tab-pane" style="display: none;">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Leveling Settings</h5>
                        </div>
                        <div class="card-body">
                            <form id="leveling-form">
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="level_enabled" 
                                           name="level_enabled" <%= settings && settings.level_enabled ? 'checked' : '' %>>
                                    <label class="form-check-label" for="level_enabled">Enable Leveling</label>
                                </div>
                                <div class="form-check form-switch mb-3">
                                    <input class="form-check-input" type="checkbox" id="level_up_messages" 
                                           name="level_up_messages" <%= settings && settings.level_up_messages ? 'checked' : '' %>>
                                    <label class="form-check-label" for="level_up_messages">Show Level Up Messages</label>
                                </div>
                                <button type="submit" class="btn btn-primary">Save Settings</button>
                            </form>
                        </div>
                    </div>
                </div>
                
                <!-- Welcome Tab -->
                <div id="welcome" class="tab-pane" style="display: none;">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-door-open me-2"></i>Welcome/Leave Messages</h5>
                        </div>
                        <div class="card-body">
                            <form id="welcome-form">
                                <div class="mb-3">
                                    <label class="form-label">Welcome Channel</label>
                                    <select class="form-select" name="welcome_channel">
                                        <option value="">None</option>
                                        <% guild.channels.cache.filter(c => c.type === 0).forEach(channel => { %>
                                            <option value="<%= channel.id %>" <%= settings && settings.welcome_channel === channel.id ? 'selected' : '' %>>
                                                #<%= channel.name %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Welcome Message</label>
                                    <textarea class="form-control" name="welcome_message" rows="3"><%= settings ? settings.welcome_message : '' %></textarea>
                                    <small class="text-muted">Variables: {user}, {username}, {server}, {membercount}</small>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Leave Channel</label>
                                    <select class="form-select" name="leave_channel">
                                        <option value="">None</option>
                                        <% guild.channels.cache.filter(c => c.type === 0).forEach(channel => { %>
                                            <option value="<%= channel.id %>" <%= settings && settings.leave_channel === channel.id ? 'selected' : '' %>>
                                                #<%= channel.name %>
                                            </option>
                                        <% }); %>
                                    </select>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label">Leave Message</label>
                                    <textarea class="form-control" name="leave_message" rows="3"><%= settings ? settings.leave_message : '' %></textarea>
                                </div>
                                <button type="submit" class="btn btn-primary">Save Settings</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Tab switching
        document.querySelectorAll('.nav-link[data-tab]').forEach(link => {
            link.addEventListener('click', function(e) {
                e.preventDefault();
                
                // Update active nav
                document.querySelectorAll('.nav-link').forEach(l => l.classList.remove('active'));
                this.classList.add('active');
                
                // Show tab content
                const tabId = this.getAttribute('data-tab');
                document.querySelectorAll('.tab-pane').forEach(tab => {
                    tab.style.display = 'none';
                });
                document.getElementById(tabId).style.display = 'block';
            });
        });
        
        // Form submission
        document.querySelectorAll('form').forEach(form => {
            form.addEventListener('submit', async function(e) {
                e.preventDefault();
                
                const formData = new FormData(this);
                const data = Object.fromEntries(formData);
                
                // Convert checkboxes to boolean
                for (const key in data) {
                    if (data[key] === 'on') {
                        data[key] = true;
                    }
                }
                
                try {
                    const response = await fetch(`/api/<%= guild.id %>/settings`, {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify(data)
                    });
                    
                    if (response.ok) {
                        alert('Settings saved successfully!');
                    } else {
                        alert('Failed to save settings.');
                    }
                } catch (error) {
                    console.error(error);
                    alert('An error occurred.');
                }
            });
        });
    </script>
</body>
</html>
